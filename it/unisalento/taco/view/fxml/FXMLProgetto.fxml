<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.net.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.*?>
<?import it.unisalento.taco.model.*?>


<AnchorPane id="AnchorPane" prefHeight="400.0" prefWidth="600.0" styleClass="mainFxmlClass" xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.unisalento.taco.controller.FXMLProgettoController">
    <HBox spacing="10.0" alignment="CENTER_LEFT" id="topLeft" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0" prefHeight="50.0" styleClass="blue">
        <children>
            <ImageView fitHeight="50" preserveRatio="true" id="left-menu-logo">
              <image>
                <Image url="@../img/logo2.jpg" smooth="true" />
              </image>
            </ImageView>
            <Label styleClass="top-bar-label" fx:id="nomeClient" text="Tizio Caio"/>    
        </children>
    </HBox>
    <GridPane hgap="10" vgap="20" alignment="CENTER" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="50" AnchorPane.bottomAnchor="0" styleClass="green">
        <Label styleClass="titolo" text="Progetto Taco" GridPane.columnIndex="0" GridPane.rowIndex="0" GridPane.columnSpan="4" />
        <Label styleClass="content" text="Budget:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
        <Label styleClass="content" text="1000.0€" GridPane.columnIndex="1" GridPane.rowIndex="1" minWidth="100.0" />
        <Label styleClass="content" text="Saldo:" GridPane.columnIndex="2" GridPane.rowIndex="1"/>
        <Label styleClass="content" text="300.0€" GridPane.columnIndex="3" GridPane.rowIndex="1" minWidth="100.0"/>

        <Label styleClass="titolo-tabella" GridPane.columnIndex="0" GridPane.rowIndex="2" text="Lista dei dipendenti"/>
        <TableView fx:id="tableViewDip" GridPane.columnIndex="0" GridPane.rowIndex="3" GridPane.columnSpan="4" >
            <columns>
                 <TableColumn text="Nome">
                 </TableColumn>
                 <TableColumn text="Cognome">
                 </TableColumn>
                 <TableColumn text="Email">
                 </TableColumn>
                 <TableColumn text="">
                 </TableColumn>
            </columns>  
       </TableView>
       
       <Label styleClass="tabella-titolo" GridPane.columnIndex="5" GridPane.rowIndex="2" text="Ultimi ordini"/>
       <TableView fx:id="tableViewOrd" GridPane.columnIndex="5" GridPane.rowIndex="3" GridPane.columnSpan="4" >
            <columns>
                 <TableColumn text="Costo">
                 </TableColumn>
                 <TableColumn text="Dipendente">
                 </TableColumn>
                 <TableColumn text="Prodotto">
                 </TableColumn>
                 <TableColumn text="Quantità">
                 </TableColumn>
                 <TableColumn text="Data">
                 </TableColumn>
            </columns>  
       </TableView>
    </GridPane>
    <stylesheets>
        <URL value="@/it/unisalento/taco/view/css/fxmlprogetto.css"/>
    </stylesheets>
</AnchorPane>
