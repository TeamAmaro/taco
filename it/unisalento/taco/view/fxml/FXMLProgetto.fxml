            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
        </padding> 
        <Label fx:id="nomeProgetto" styleClass="titolo"  GridPane.columnIndex="0" GridPane.rowIndex="0" GridPane.columnSpan="4" />
